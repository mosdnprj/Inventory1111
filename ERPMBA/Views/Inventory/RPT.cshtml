@{
    ViewBag.Title = "RPT";
}
@Html.Partial("Index")
<div style="float:left; width:200px; padding-top:100px; border-color:#333300">
    <div class="dropdown">
        <button class="dropbtn">
            <ul class="nav nav-pills nav-stacked" style="float:left;">
                <li style="width: 200px; background : linear-gradient(to right, #ccffff, #eaecc6 100%); text-align:center">
                    @Html.ActionLink("Inventory", "Inventory", "Inventory", new { @style = "color:Black;" })
                    <ul class="dropdown-content">

                        <li style="width: 200px;text-align:center;">@Html.ActionLink("Product Sales", "ProductSales", "Inventory", new { @style = "color:Black;" })</li>
                        <li style="width: 200px;text-align:center;">@Html.ActionLink("Purchase Orders", "PurchaseOrders", "Inventory", new { @style = "color:Black;" })</li>
                        <li style="width: 200px;text-align:center;">@Html.ActionLink("Inventory Details", "InventoryDetails", "Inventory", new { @style = "color:Black;" })</li>
                        <li style="width: 200px;text-align:center;">@Html.ActionLink("Inventory Valuation", "InventoryValuation", "Inventory", new { @style = "color:Black;" })</li>
                        <li style="width: 200px;text-align:center;">@Html.ActionLink("Lot Details", "LotDetails", "Inventory", new { @style = "color:Black;" })</li>
                    </ul>
                </li>
                <li style="width: 200px; background : linear-gradient(to right, #ccffff, #eaecc6 100%); text-align:center">@Html.ActionLink("Sales", "Sales", "Inventory", new { @style = "color:Black;" })</li>
                <li style="width: 200px;background : linear-gradient(to right, #ccffff, #eaecc6 100%); text-align:center">@Html.ActionLink("Purchases", "Purchases", "Inventory", new { @style = "color:Black;" })</li>
                <li style="width: 200px; background : linear-gradient(to right, #ccffff, #eaecc6 100%); text-align:center">@Html.ActionLink("Logs", "Logs", "Inventory", new { @style = "color:Black;" })</li>
            </ul>
        </button>
    </div>
</div>



