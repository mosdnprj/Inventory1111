@model ERPMBA.Models.Asset
@{
    ViewBag.Title = "Asset";
}

@Html.Partial("DM")

<div class="tab-content" style="float:left; width:60%;height:100%;padding-left:20px;padding-top:80px;">
    <div id="Details" class="tab-pane fade in active" style="width:100%;height:100%;padding-left:15px;">
        <h3><CENTER>Asset Details</CENTER></h3>
        <form class="form-group">
            <div class="form-group">
                <div id="left" style="width:300px;float:left; ">
                    Employee Id<br />
                    <select class="form-control" id="emplid">
                        <option>Select Employee ID</option>
                        <option>emp1</option>
                        <option>emp2</option>
                        <option>emp3</option>
                        <option>emp4</option>
                    </select><br />

                    Given Date<input type="date" class="form-control" />
                    <br />
                    Asset Details<br /><textarea class="form-control"></textarea>
                </div>

                <div id="left" style="width:300px;float:right;padding-left:20px; ">
                    Type of Asset<br />
                    <select class="form-control" id="emplid">
                        <option>Select </option>
                        <option>Computer</option>
                        <option>Laptop</option>
                        <option>Phone</option>
                        <option>Vehicle</option>
                    </select><br />
                    Return Date <br /><input type="date" class="form-control" /><br />
                </div>
            </div>
        </form>
    </div>





