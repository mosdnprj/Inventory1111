@model ERPMBA.Models.Employee
@{
    ViewBag.Title = "ExitDetails";
}
@Html.Partial("DM")
<div class="tab-content" style="float:left; width:60%;height:100%;padding-left:30px;">
    <div id="Details" class="tab-pane fade in active" style="width:100%;height:100%;padding-left:15px;padding-top:80px;">
        <h3><center>Exit Details</center></h3>
        <form name="contactForm" method="post" action="" class="form-group" role="form">

            <div class="input-group" style="width:200px;">
                <label for="emplid">Employee Id</label>
                <select class="form-control" id="emplid">
                    <option>Select </option>
                    <option>emp1</option>
                    <option>emp2</option>
                    <option>emp3</option>
                    <option>emp4</option>
                </select>
            </div>
            <div class="input-group" style="width:200px;">
                <label for="emplid">Date Of Join</label>
                <input type="date" class="form-control" />
            </div>
            <div class="input-group" style="width:200px;">
                <label for="emplid">Date Of Leaving</label>
                <input type="date" class="form-control" />
            </div>
            <label for="ReasonToLeaveTheCompany">Reason To Leave The Company</label><br />
            <input type="checkbox" name="r" />Compensation<br />
            <input type="checkbox" name="r" />New Job<br />
            <input type="checkbox" name="r" />Personal Reasons<br />
            <input type="checkbox" name="r" />Relocation<br />
            <input type="checkbox" name="r" />Conflict With CoWorkers<br />
            <input type="checkbox" name="r" />Benefit<br />
            <input type="checkbox" name="r" />Retirement<br />
            <input type="checkbox" name="r" />Other
            <div>

                <style>
                    td {
                        text-align: center;
                    }
                </style>

                <table class="table-bordered">

                    <thead>
                        <b>How did you feel about the following?</b>
                    </thead>
                    <tr>
                        <td></td>
                        <td>Excellent</td>
                        <td>Good</td>
                        <td>Satisfied</td>
                        <td>Unsatisfied</td>

                    </tr>
                    <tr>
                        <td>Your Work Environment</td>
                        <td><input type="radio" name="WE" /></td>
                        <td><input type="radio" name="WE" /></td>
                        <td><input type="radio" name="WE" /></td>
                        <td><input type="radio" name="WE" /></td>
                    </tr>
                    <tr>
                        <td>Your Work Schdule</td>
                        <td><input type="radio" name="WS" /></td>
                        <td><input type="radio" name="WS" /></td>
                        <td><input type="radio" name="WS" /></td>
                        <td><input type="radio" name="WS" /></td>
                    </tr>
                    <tr>
                        <td>Your Compensation</td>
                        <td><input type="radio" name="WC" /></td>
                        <td><input type="radio" name="WC" /></td>
                        <td><input type="radio" name="WC" /></td>
                        <td><input type="radio" name="WC" /></td>
                    </tr>
                    <tr>
                        <td>Your Benefits From Company</td>
                        <td><input type="radio" name="B" /></td>
                        <td><input type="radio" name="B" /></td>
                        <td><input type="radio" name="B" /></td>
                        <td><input type="radio" name="B" /></td>
                    </tr>
                </table>
            </div>
        </form>
    </div>
</div>
