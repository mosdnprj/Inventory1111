@{
    ViewBag.Title = "UserAdmin";
    Layout = "~/Views/Style/MasterPage.cshtml";
}
@section featured{

    <div class="SideDiv">

        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 text">
                        <center><h1> <u><strong>ITCloudModules.Com</strong></u></h1></center>
                        <div class="description" style="background-color:brown;">


                            </p>
                        </div>

                    </div>

                    <div class="col-sm-4 form-box" style=" background-color: slategray">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>Sign up now</h3>
                                <p>Fill in the form below to get instant access:</p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-pencil"></i>

                            </div>

                        </div>
                        <div class="form-bottom">

                            <form role="form" action="" method="post" class="registration-form">
                                <div style=" background-color: lightgrey; padding:20px">
                                    <div class="form-group">
                                        <label for="Name">Name</label>
                                        <label class="sr-only" for="form-first-name">First name</label>
                                        <input type="text" name="form-first-name" placeholder="First name..." class="form-first-name form-control" id="form-first-name" required>
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="form-last-name">Last name</label>
                                        <input type="text" name="form-last-name" placeholder="Last name..." class="form-last-name form-control" id="form-last-name" required>
                                    </div>
                                    <label for="Name">E-Mail</label>
                                    <div class="form-group">
                                        <label class="sr-only" for="form-email">Email</label>
                                        <input type="text" name="form-email" placeholder="Email..." class="form-email form-control" id="form-email" required>
                                    </div>
                                    <label for="Name">Password</label>
                                    <div class="form-group">
                                        <label class="sr-only" for="form-password">password</label>
                                        <input type="password" name="form-last-name" placeholder="Password..." class="form-password form-control" id="form-password" required>
                                    </div>

                                    <div class="form-group">
                                        <label class="sr-only" for="form-cpassword">Conform Password</label>
                                        <input type="password" name="form-last-name" placeholder="Conform Password..." class="form-password form-control" id="form-cpassword" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="Name">Birthday</label>
                                        <label class="sr-only" for="form-dob">Birthday</label>
                                        <input type="date" aria-controls name="form-last-name" placeholder="Birthday..." class="form-number form-control" id="form-dob">
                                    </div>
                                    <label for="Name">Gender</label>
                                    <div class="form-group">
                                        <label class="sr-only" for="gender">Select Gender</label>
                                        <select class="form-gender form-control" id="gender">
                                            <option value="Male">Male</option>
                                            <option value="Female">FeMale</option>
                                            <div class="container">

                                        </select>

                                        @*  <h1>Bootstrap drop down with country codes</h1>
                                            <p>&nbsp;</p>*@
                                        <div class="form-group" id="country-codes">
                                            <button class="btn btn-primary form-group-toggle" type="button" data-toggle="form-group">
                                                <span class="value">Select a Country</span>
                                                <span class="caret"></span>
                                            </button>
                                            <select>
                                                <ul class="form-group-menu">

                                                    <option><a href="#" value="+91">India(+91)</a></option>
                                                    <option><a href="#" value="+61">australia (+61)</a></option>
                                                    <option><a href="#" value="+86">China (+86)</a></option>
                                                    <option><a href="#" value="+47">Norway (+47)</a></option>
                                                    <option><a href="#" value="+46">Sweeden (+46)</a></option>
                                                    <option><a href="#" value="+79">Danmark (+79)</a></option>
                                                </ul>
                                        </div>
                                    </div>

                                    </select>
                                    <label for="file">Upload your photos :</label>
                                    <input type="file" onchange="onFileSelected(event)">
                                    <img id="myimage" style="height:200px; width:250 ">
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>

 function onFileSelected(event) {
  var selectedFile = event.target.files[0];
  var reader = new FileReader();

  var imgtag = document.getElementById("myimage");
  imgtag.title = selectedFile.name;

  reader.onload = function(event) {
    imgtag.src = event.target.result;
  };

  reader.readAsDataURL(selectedFile);
}

    </script>
    <br>
    <input type="submit" />
}