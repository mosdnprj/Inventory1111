                                    <!--<textarea class="form-control" rows="4" id="inputMessage" name="inputMessage" placeholder="Treść wiadomości..." required="required"></textarea>-->

                                </div>
                            </td>
                            <td>
                                <div class="input-group">
                                    <span class="input-group-addon">opportunity_type</span>
                                    @Html.TextBoxFor(model => model.opportunity_type, new { @class = "form-control", placeholder = "opportunity_type" })
                                    <!--<textarea class="form-control" rows="4" id="inputMessage" name="inputMessage" placeholder="Treść wiadomości..." required="required"></textarea>-->

                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="input-group">
                                    <span class="input-group-addon">assigned_user_id</span>
                                    @Html.TextBoxFor(model => model.assigned_user_id, new { @class = "form-control", placeholder = "assigned_user_id" })
                                    <!--<textarea class="form-control" rows="4" id="inputMessage" name="inputMessage" placeholder="Treść wiadomości..." required="required"></textarea>-->
                                </div>
                            </td>
                        </tr>

