
@model ERPMBA.Models.opportunities

@{
    ViewBag.Title = "opportunities";
}
@Html.Partial("Home")
<div class="tab-content" style=" float:left; width:60%;height:100%;">
    <div id="opportunities" class="tab-pane fade in active" style="color: #0026ff; width:100%;height:100%;">

